<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:centerColor="#EF5340"
                android:endColor="#424242"
                android:startColor="#B71C1C"
                android:type="linear"/>
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="240"
            android:pivotX="27%"
            android:pivotY="35%">
            <shape android:shape="rectangle">
                <!--<solid android:color="@color/colordarkblack" />-->
                <gradient
                    android:angle="180"
                    android:centerColor="#424242"
                    android:endColor="#616161"
                    android:startColor="#424242"
                    android:type="linear" />
            </shape>
        </rotate>
    </item>
</layer-list>