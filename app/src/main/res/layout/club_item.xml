<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_2sdp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/txt_club_name"
            android:layout_marginRight="@dimen/_7sdp"
            android:id="@+id/img_search_item"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_70sdp"
            android:backgroundTint="@android:color/white"
            android:background="@drawable/ic_place_holder" />

        <TextView

            android:id="@+id/txt_club_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Test User"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_club_number"
            app:layout_constraintLeft_toRightOf="@id/img_search_item"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_search_item" />

        <TextView
            android:id="@+id/txt_club_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9499494949494"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toTopOf="@id/txt_club_address"
            app:layout_constraintLeft_toLeftOf="@id/txt_club_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_club_name" />

        <TextView
            android:id="@+id/txt_club_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dallas,TX"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="@id/img_search_item"
            app:layout_constraintLeft_toLeftOf="@id/txt_club_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_club_number" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>